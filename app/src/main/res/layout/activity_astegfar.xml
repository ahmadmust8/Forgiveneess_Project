<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_astegfar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahmad.mustafa.foregivness3.AstegfarActivity">

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="209dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/button_forgivenss_counter"
        android:onClick="onCounterIncrease"
        />

    <TextView
        android:text="@string/_0"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:id="@+id/counter_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_forgivenss_counter"
        android:layout_marginBottom="58dp"
        android:textAlignment="center"
        android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>
